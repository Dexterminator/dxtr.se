@import 'nib'
@import url('https://fonts.googleapis.com/css2?family=Jura&display=swap')
@import url('https://fonts.googleapis.com/css?family=Pacifico')
@import url("https://fonts.googleapis.com/css?family=Inconsolata")
@import url('https://fonts.googleapis.com/css2?family=Raleway:wght@100&display=swap')
@import url('https://fonts.googleapis.com/css2?family=Oxanium:wght@200..800&family=Silkscreen&display=swap')

color-dark-grey = #424242

body
  font-family 'Jura', sans-serif
  overflow hidden
  color color-dark-grey
  margin 0
  padding 0
  font-size @css{clamp(1.2rem, 2.8vw, 1.4rem)}

main
  padding 0
  margin 0
  width 100%
  height 100vh
  overflow-y scroll
  scroll-snap-points-y repeat(100vh)
  scroll-snap-type y mandatory

section
  width 100%
  height 100vh
  display flex
  align-items flex-start
  scroll-snap-align center
  div
    margin 0 auto

.screenshot
  box-shadow 4px 4px 2px 1px rgba(0, 0, 0, 0.2)
  width @css{min(90%, 70vh)}
  &:hover
    filter brightness(90%)

.speglar-trailer
  box-shadow 4px 4px 2px 1px rgba(0, 0, 0, 0.2)
  width @css{min(90%, 70vh)}
  aspect-ratio 16/9

h1
  margin-top 0.3em
  margin-bottom 0.5em
  text-align center
  font-size @css{clamp(3rem, 8vw, 4.2rem)}

img, video, iframe
  display block 
  margin 0 auto

.description
  margin 0 auto
  width @css{min(85%, 20em)}

.icons
  margin-top 1.5em
  display flex
  justify-content center
  gap 1em
  img
    width 1.2em
    color white
    &:hover
      filter brightness(85%)

section.me
  background-color #38253D
  color #E8C0D4
  .description
    text-align center

img.portrait
  width @css{min(50%, 250px)}

section.speglar
  background-color #242338
  color white
  a
    color white
    &:hover
      filter brightness(85%)
  h1
    margin-top 0.4em
    color #73D2E2
    font-family 'Raleway', sans-serif
    font-weight 100

img.speglar-header
  width @css{min(70%, 40vh)}
  margin-top 1em
  margin-bottom 0.5em

section.solemates
  background-color #fff0fa

img.solemates-header
  width @css{min(80%, 70vh)}
  margin-top 1em
  margin-bottom 0.5em

section.imperimetric
  background-color rgb(12, 81, 83)
  color white
  h1
    font-family 'Pacifico', cursive
    margin-top 0

section.clj-templates
  background-color #262626
  color white
  h1
    margin-top 0.5em
    font-family Inconsolata
    color #d88d58
    font-size @css{clamp(2.3rem, 8vw, 3.8rem)}

.paren
  color #808080

.press-kit
  font-size @css{clamp(1rem, 2.8vw, 0.8rem)}
  font-family Oxanium
  padding-bottom 10em
  h3
    margin-bottom 0.2em
  iframe
    margin 0
    width @css{min(90%, 70vh)}
  img.press-kit-hero
    width @css{min(100%, 51em)}

.press-kit-content
  padding 0.5em
  padding-top 1em
  padding-bottom 1em
  margin 0 auto
  width @css{min(90%, 50em)}

.press-kit-descriptions
  display flex
  gap 2em
  flex-direction column
  @media(min-width 55rem)
    flex-direction row
    gap 8em

  .factsheet
    width @css{min(90%, 55em)}

hr
  margin-top 1em
  border 0;
  height 1px;
  background-image linear-gradient(to right, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.1));

a.download-all-images
  padding .4em 1em
  font-size 0.9em
  border-radius 10px
  background-color purple
  text-decoration none
  color white
  &:hover
    filter brightness(85%)

.spacer
  margin-right 0.1em

.image-grid
  display grid
  grid-template-columns repeat(2, 1fr)
  align-items center
  &.key-art
    grid-template-columns repeat(4, 1fr)
  gap 1em
  img
    width 100%
    margin 0
    &:hover
      filter brightness(85%)

.rock-paper-secrets
  img
    margin-bottom 1.5em

.rps
  background-color rgb(30, 51, 30)
  color white

.rps-header
  width @css{min(40%, 40vh)}
  margin-top 1rem
  margin-bottom 1rem

.rps-clip, .doom-drop-clip
  box-shadow 4px 4px 2px 1px rgba(0, 0, 0, 0.2)
  width @css{min(90%, 70vh)}
  aspect-ratio 16/9

.doom-drop
  background-color rgb(41, 9, 53)
  color white

.doom-drop-header
  width @css{min(60%, 50vh)}
  margin-top 2rem
  margin-bottom 1rem
