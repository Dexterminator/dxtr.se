@import 'nib'
@import url('https://fonts.googleapis.com/css2?family=Jura&display=swap')
@import url('https://fonts.googleapis.com/css?family=Pacifico')
@import url("https://fonts.googleapis.com/css?family=Inconsolata")
@import url('https://fonts.googleapis.com/css2?family=Raleway:wght@100&display=swap')

color-dark-grey = #424242

body
  font-family 'Jura', sans-serif
  overflow hidden
  color color-dark-grey
  margin 0
  padding 0
  font-size @css{clamp(1.2rem, 2.8vw, 1.4rem)}

main
  padding 0
  margin 0
  width 100%
  height 100vh
  overflow-y scroll
  scroll-snap-points-y repeat(100vh)
  scroll-snap-type y mandatory

section
  width 100%
  height 100vh
  display flex
  align-items flex-start
  scroll-snap-align center
  div
    margin 0 auto

img.screenshot
  box-shadow 4px 4px 2px 1px rgba(0, 0, 0, 0.2)
  width @css{min(90%, 70vh)}
  &:hover
    filter brightness(90%)

h1
  margin-top 0.3em
  margin-bottom 0.5em
  text-align center
  font-size @css{clamp(3rem, 8vw, 4.2rem)}

h2
  font-size 2.5rem

img
  display block 
  margin 0 auto

#me-header
  text-align center

.description
  margin 0 auto
  width @css{min(85%, 20em)}

.icons
  margin-top 1.5em
  display flex
  justify-content center
  gap 1em
  img
    width 1.2em
    color white
    &:hover
      filter brightness(85%)

section.me
  background-color #38253D
  color #E8C0D4

img.portrait
  width @css{min(50%, 250px)}

section.speglar
  background-color #242338
  color white
  a
    color white
  h1
    margin-top 0.4em
    color #73D2E2
    font-family 'Raleway', sans-serif
    font-weight 100

section.solemates
  background-color #fff0fa

img.solemates-header
  width @css{min(80%, 70vh)}
  margin-top 1em
  margin-bottom 0.5em

section.imperimetric
  background-color rgb(12, 81, 83)
  color white
  h1
    font-family 'Pacifico', cursive
    margin-top 0

section.clj-templates
  background-color #262626
  color white
  h1
    margin-top 0.5em
    font-family Inconsolata
    color #d88d58
    font-size @css{clamp(2.3rem, 8vw, 3.8rem)}

.paren
  color #808080
