@import 'nib'
@import url('https://fonts.googleapis.com/css2?family=Jura&display=swap')
@import url('https://fonts.googleapis.com/css?family=Pacifico')
@import url("https://fonts.googleapis.com/css?family=Inconsolata")
@import url('https://fonts.googleapis.com/css2?family=Raleway:wght@100&display=swap')

color-light-grey = #F5F5F5
color-mid-grey = #E9E9E9
color-dark-green = #006666
color-green = #00bcbb
color-dark-grey = #424242
color-orange = #ff9736

breakpoint-medium = 600px
breakpoint-large = 890px

pagewrap-width-small = 90%
pagewrap-width-large = 800px

body
  font-family 'Jura', sans-serif
  overflow hidden
  font-size 1.4rem
  color color-dark-grey
  margin 0
  padding 0

main
  padding 0
  margin 0
  width 100%
  height 100vh
  overflow-y scroll
  scroll-snap-points-y repeat(100vh)
  scroll-snap-type y mandatory
  -ms-overflow-style none
  scrollbar-width none
  &::-webkit-scrollbar
    display none

section
  width 100%
  height 100vh
  display flex
  align-items flex-start
  scroll-snap-align center
  div
    margin 0 auto

img.screenshot
  width 90%
  box-shadow 4px 4px 2px 1px rgba(0, 0, 0, 0.2)
  @media (min-width breakpoint-medium)
    max-width 80vh

h1
  margin-top 0.3em
  margin-bottom 0.5em
  text-align center
  font-size 3rem
  @media (min-width breakpoint-medium)
    font-size 4.2rem

h2
  font-size 2.5rem

img
  display block 
  margin 0 auto

#me-header
  text-align center

.description
  margin 0 auto
  width 85%
  @media (min-width breakpoint-medium)
    max-width 20em

.icons
  margin-top 1.5em
  display flex
  justify-content center
  gap 1em
  img
    width 1.2em
    color white
    &:hover
      filter brightness(85%)

section.me
  background-color #38253D
  color #E8C0D4

section.speglar
  background-color #242338
  color white
  a
    color white
    &:hover
      filter brightness(90%)
  h1
    margin-top 0.4em
    color #73D2E2
    font-family 'Raleway', sans-serif
    font-weight 100

section.solemates
  background-color #fff0fa

img.solemates-header
  width 80%
  margin-top 1em
  margin-bottom 0.5em
  @media (min-width breakpoint-medium)
    max-width 70vh

section.imperimetric
  background-color rgb(12, 81, 83)
  color white
  h1
    font-family 'Pacifico', cursive
    margin-top 0

section.clj-templates
  background-color #262626
  color white
  h1
    margin-top 0.5em
    font-family Inconsolata
    color #d88d58
    font-size 2.5rem
    @media (min-width breakpoint-medium)
      font-size 3.8rem

.paren
  color #808080
